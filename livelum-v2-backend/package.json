{
  "name": "livelum-v2-backend",
  "version": "1.0.0",
  "description": "Backend API para Livelum v2 con arquitectura DDD",
  "main": "dist/app/index.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "node -r ./tsconfig-paths-bootstrap.js dist/app/index.js",
    "start:dev": "ts-node-dev -r tsconfig-paths/register --respawn --rs --clear --max_old_space_size=3072 --inspect=0.0.0.0:9231 app/index.ts",
    "build": "npm run build:clean && npm run build:tsc",
    "build:tsc": "tsc -p tsconfig.json",
    "build:clean": "rm -rf dist; exit 0",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "jest tests/e2e",
    "lint": "eslint \"{app,config,src,tests}/**/*.ts\"",
    "lint:fix": "eslint \"{app,config,src,tests}/**/*.ts\" --fix",
    "format": "prettier --write \"{app,config,src,tests}/**/*.{ts,json}\"",
    "check:format": "prettier --check \"{app,config,src,tests}/**/*.{ts,json}\""
  },
  "dependencies": {
    "@fastify/compress": "^8.1.0",
    "@fastify/cors": "^11.1.0",
    "@fastify/helmet": "^13.0.1",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@sinclair/typebox": "^0.34.38",
    "@types/bcrypt": "^6.0.0",
    "ajv": "^8.17.1",
    "bcrypt": "^6.0.0",
    "dotenv": "^17.2.1",
    "fastify": "^5.4.0",
    "mongoose": "^8.17.1",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "reflect-metadata": "^0.2.2",
    "tsyringe": "^4.10.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.2.1",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^30.0.5",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2"
  },
  "keywords": [
    "ddd",
    "hexagonal-architecture",
    "fastify",
    "mongodb",
    "typescript",
    "api"
  ],
  "author": "Livelum Team",
  "license": "MIT"
}
